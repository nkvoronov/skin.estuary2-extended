							<width>830</width>
							<aligny>center</aligny>
							<label>$VAR[ListItemDateLabelVar]$INFO[ListItem.Label]$INFO[ListItem.EpisodeName, (,)]</label>
							<shadowcolor>$VAR[TextShadowColorVar]</shadowcolor>
						</control>
					</focusedlayout>
					<itemlayout height="100" width="780">
						<control type="label">
							<left>10</left>
							<height>90</height>
							<width>830</width>
							<aligny>center</aligny>
							<label>$VAR[ListItemDateLabelVar]$INFO[ListItem.Label]$INFO[ListItem.EpisodeName, (,)]</label>
							<shadowcolor>$VAR[TextShadowColorVar]</shadowcolor>
						</control>
					</itemlayout>
					<content sortby="date" sortorder="$PARAM[folder_sortorder]">$INFO[ListItem.FilenameAndPath]</content>
				</control>
			</control>
		</control>
	</include>
	<include name="RDSInfoLine">

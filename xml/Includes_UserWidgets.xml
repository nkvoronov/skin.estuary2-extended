						<control type="image">
							<width>340</width>
							<height>500</height>
							<texture border="22">dialogs/dialog-bg.png</texture>
						</control>
						<control type="image">
							<top>43</top>
							<left>42</left>
							<width>260</width>
							<height>200</height>
							<texture fallback="$PARAM[fallback_image]">$PARAM[item_image]</texture>

<?xml version="1.0" encoding="UTF-8"?>
<window>
	<controls>
        <control type="label">
            <description>SlideShow Info</description>
            <left>25</left>
            <top>25</top>
            <width>600</width>
            <height>25</height>
            <font>font12</font>
            <textcolor>grey</textcolor>
            <shadowcolor>black</shadowcolor>
            <scroll>false</scroll>
            <align>left</align>
            <aligny>center</aligny>
            <label>([COLOR button_focus]$INFO[Slideshow.SlideIndex][/COLOR]) $INFO[Slideshow.Filename]</label>
            <visible>Skin.HasSetting(slideshow_info)</visible>
        </control>
        <control type="label">
            <description>Clock label</description>
            <left>1100</left>
            <top>25</top>
            <width>800</width>
            <height>25</height>
            <align>right</align>
            <aligny>center</aligny>
            <font>font13</font>
            <textcolor>white</textcolor>
            <shadowcolor>black</shadowcolor>
            <label>$INFO[System.Time]</label>
            <visible>Skin.HasSetting(full_screen_clock)</visible>
        </control>
		<control type="image">
			<centerleft>50%</centerleft>
			<centertop>50%</centertop>
			<width>150</width>
			<height>150</height>
			<texture>icons/now-playing/pause.png</texture>
			<visible>SlideShow.IsPaused</visible>
		</control>
	</controls>
</window>

<?xml version="1.0" encoding="UTF-8"?>
<window>
	<controls>
		<include condition="Skin.HasSetting(touchmode)">TouchBackSlideshowButton</include>
		<control type="label">
			<description>SlideShow Info</description>
			<left>25</left>
			<top>25</top>
			<width>600</width>
			<height>25</height>
			<font>font12</font>
			<textcolor>$VAR[GreyColorVar]</textcolor>
			<shadowcolor>$VAR[BlackColorVar]</shadowcolor>
			<scroll>false</scroll>
			<align>left</align>
			<aligny>center</aligny>
			<label>([COLOR $VAR[MainColorVar]]$INFO[Slideshow.SlideIndex][/COLOR]) $INFO[Slideshow.Filename]</label>
			<visible>Skin.HasSetting(slideshow_info)</visible>
		</control>
		<control type="label">
			<description>Clock label</description>
			<right>20</right>
			<top>25</top>
			<width>800</width>
			<height>25</height>
			<align>right</align>
			<aligny>center</aligny>
			<font>font13</font>
			<textcolor>$VAR[WhiteColorVar]</textcolor>
			<shadowcolor>$VAR[BlackColorVar]</shadowcolor>
			<label>$INFO[System.Time]</label>
			<visible>Skin.HasSetting(full_screen_clock)</visible>
		</control>
		<control type="image">
			<centerleft>50%</centerleft>
			<centertop>50%</centertop>
			<width>256</width>
			<height>256</height>
			<texture>icons/settings/player.png</texture>
			<visible>SlideShow.IsVideo</visible>
			<visible>![Player.Playing + Player.HasVideo] | SlideShow.IsPaused</visible>
		</control>
	</controls>
</window>

<?xml version="1.0" encoding="UTF-8"?>
<window>
	<defaultcontrol always="true">8000</defaultcontrol>
	<onload condition="Skin.HasSetting(enable_skin_debug)">Skin.ToggleDebug</onload>
	<controls>
		<control type="videowindow">
			<description>Video Control For Splash</description>
			<include>FullScreenDimensions</include>
		</control>
		<control type="image">
			<description>Image Control For Splash</description>
			<include>FullScreenDimensions</include>
			<aspectratio>scale</aspectratio>
			<texture background="true">$INFO[Window(Home).Property(SkinHelper.SplashScreen)]</texture>
		</control>
		<control type="button" id="8000">
			<onfocus condition="Skin.HasSetting(enable_splashscreen)">ReplaceWindow($INFO[System.StartupWindow])</onfocus>
			<onfocus condition="Skin.String(splashscreen_path) + !Skin.HasSetting(enable_splashscreen)">RunScript(script.skin.helper.service,action=splashscreen,file=$INFO[Skin.String(splashscreen_path)],duration=$VAR[DurationSplashScreenNameVar])</onfocus>
			<onfocus condition="!Skin.String(splashscreen_path) + !Skin.HasSetting(enable_splashscreen)">AlarmClock(GoHome,ReplaceWindow($INFO[System.StartupWindow]),00:01,silent,false)</onfocus>
			<visible allowhiddenfocus="true">false</visible>
		</control>        
	</controls>
</window>
